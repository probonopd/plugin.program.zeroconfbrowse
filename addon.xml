<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.program.zeroconfbrowse"
version="0.1"
name="Browse Zeroconf"
provider-name="probono">
<requires>
  <import addon="xbmc.python" version="2.25.0"/>
  <import addon="script.module.requests" version="2.12.4"/>
</requires>
<extension point="xbmc.python.pluginsource" library="resources/lib/default.py">
  <provides>executable</provides>
</extension>
<extension point="xbmc.service" library="resources/lib/service.py" start="login">
</extension>
<extension point="xbmc.addon.metadata">
  <summary lang="en">Browse Zeroconf</summary>
  <description lang="en_US">Browse services announced on the local network with Zeroconf (also known as Avahi, Bonjour, DNS-SD, Rendezvous)
